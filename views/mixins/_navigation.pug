mixin site-navigation
    nav.navbar.navbar-default
        .container
            // Brand and toggle get grouped for better mobile display
            .navbar-header
                button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar-collapse-2')
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(href='/') SUPERAUTO
            // Collect the nav links, forms, and other content for toggling
            #navbar-collapse-2.collapse.navbar-collapse
                ul.nav.navbar-nav.navbar-right
                    li
                        a(href='/') Home
                    li
                        a(href='/about') About
                    li
                        a(href='/services') Services
                    li
                        a(href='/works') Works
                    li
                        a(href='/login') Login
                    li
                        a(href='/register') Register
                    if user
                        li
                            a(href='/user-profile') Hello, #{user.firstName} #{user.lastName} 
                                    
                    li
                        a.btn.btn-default.btn-outline.btn-circle(data-toggle='collapse', href='#nav-collapse2', aria-expanded='false', aria-controls='nav-collapse2') Sign in
                #nav-collapse2.collapse.nav.navbar-nav.nav-collapse
                    form.navbar-form.navbar-right.form-inline(role='form')
                        .form-group
                            label.sr-only(for='Email') Email
                            input#Email.form-control(type='email', placeholder='Email', autofocus='', required='')
                        .form-group
                            label.sr-only(for='Password') Password
                            input#Password.form-control(type='password', placeholder='Password', required='')
                        button.btn.btn-success(type='submit') Sign in
            // /.navbar-collapse
        // /.container
    // /.navbar
