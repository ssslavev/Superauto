mixin site-navigation
    nav.navbar.navbar-default
        .container
            // Brand and toggle get grouped for better mobile display
            .navbar-header
                button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar-collapse-2')
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(href='/') SUPERAUTO
            // Collect the nav links, forms, and other content for toggling
            if user
                #navbar-collapse-2.collapse.navbar-collapse
                    ul.nav.navbar-nav.navbar-right
                        li
                            a(href='/') Home
                        li
                            a(href='/about') About
                        li
                            a(href='/services') Services
                        li
                            a(href='/advert') Add new advert
                        li
                            a(href='/user-profile') Hello, #{user.firstName} #{user.lastName}
                        li
                            a(href='/logout') Logout

            else
                #navbar-collapse-2.collapse.navbar-collapse
                    ul.nav.navbar-nav.navbar-right
                        li
                            a(href='/') Home
                        li
                            a(href='/about') About
                        li
                            a(href='/services') Services
                        li
                            a(href='/login') Login
                        li
                            a(href='/register') Register
        // /.container
    // /.navbar
